<p id="notice"><%= notice %></p>

<div class="container">
<div class="col-md-8">
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Body</th>
      <th>Created</th>
      <th>User</th>
      <th>rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <td><%= post.user_id %></td>
        <td>
          <em><%= pluralize post.reputation_for(:votes).to_i, "vote" %>
            <span><%= link_to "| up |", vote_post_path(post, type: "up"), method: "post" %></span>
            <span><%= link_to " down|", vote_post_path(post, type: "down"), method: "post" %></span>
          </em>
        </td>

        <td><%= link_to 'Show', post %></td>
        
        <% if user_signed_in? && post.user_id == current_user.id %>
        
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>
</div>
</div>

